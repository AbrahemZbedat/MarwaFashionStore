<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <title>Marwa Fashion Store</title>
    <link rel="stylesheet" href="css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/clothes.css">
    <link rel="stylesheet" href="/css/mystyles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">


   
    <script src="index.js" defer > </script>
    <link rel="icon" href="imgs/logo.png">
</head>
<body>
    <header class="main-header">
        <nav>
            <div class="nav-container">
                <button id="toggle-menu" class="toggle-button">☰</button>
                <ul id="nav-links" class="nav-links">
                    <li><a href="cart.html"><i class="fas fa-shopping-cart"></i> סל קניות</a></li>
                    <li><a href="contact.html">צור קשר </a></li>
                    <li><a href="location.html">המיקום שלנו</a></li>
                    <li><a href="/">דף ראשי</a></li>
                </ul>
            </div>
        </nav>

             
        
    </header>

    <section class="container content-section women">
        <h2 class="section-header">FEMALE CLOTHES</h2>
        <div class="shop-items">
            <% products.forEach(product => { %>
                <div class="shop-item">
                    <span class="shop-item-title"><%= product.title %></span>
                    <img class="shop-item-image" src="/<%= product.images[0] %>" alt="<%= product.title %>" onclick="location.href='/item/<%= product.id %>'">
                    <p class="shop-item-price"> <b>  ₪<%= product.price %>  </b> </p>
                    <div class="shop-item-details">
                        <button id="view-details" class="btn btn-primary shop-item-button" type="button" onclick="location.href='/item/<%= product.id %>'">VIEW DETAILS</button><br>
                        <a href="cart.html"><button id="view-cart" class="btn btn-primary shop-item-button">VIEW CART</button></a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
    
    


    <footer class="main-footer">
        <div class="container main-footer-container">
            <h3 class="band-name text-center">Marwa Fashion Store</h3>
            
        </div>
    </footer>
 <!-- Admin Login Button -->
 <div style="position: fixed; bottom: 20px; left: 20px;">
    <a href="admin_login.html">
        <button class="btn btn-danger">כניסת מנהל</button>
    </a>
</div>
</body>
<script>   // Toggle menu functionality
    document.getElementById("toggle-menu").addEventListener("click", function() {
     const navLinks = document.getElementById("nav-links");
     navLinks.classList.toggle("active"); // Toggle the 'active' class
 });</script>
</html>

<style> 

