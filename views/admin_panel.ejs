<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="css/adminpanel.css">
    <script src="admin_panel.js" defer></script>
</head>
<body>
    <h2>Admin Panel</h2>

    <!-- List of existing items -->
    <h3>Existing Items</h3>
    <ul id="itemsList"></ul>

    

    <!-- Form to add a new item -->
    <h3>Add New Item</h3>
    <form id="addItemForm" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br><br>
        
        <label for="price">Price:</label>
        <input type="text" id="price" name="price" required><br><br>

        <label for="sizes">Sizes (comma separated):</label>
        <input type="text" id="sizes" name="sizes" required><br><br>

        <label for="colors">Colors (comma separated):</label>
        <input type="text" id="colors" name="colors" required><br><br>

        <label for="images">Images:</label>
        <input type="file" id="images" name="images" multiple required><br><br>
        <label for="brand">Brand:</label>
<select id="brand" name="brand" required>
  <option value="">Select brand</option>
  <option value="NIKE">NIKE</option>
  <option value="FRED PERRY">FRED PERRY</option>
  <option value="ADIDAS">ADIDAS</option>
</select><br><br>

<label for="category">Category:</label>
<select id="category" name="category" required>
  <option value="">Select category</option>
  <option value="T-SHIRT">T-SHIRT</option>
  <option value="SHOES">SHOES</option>
  <option value="HOODIE">HOODIE</option>
</select><br><br>


        <button type="submit">Add Item</button>
    </form>

    <!-- Form to update an existing item -->
    <h3>Update Item</h3>
    <form id="updateItemForm" enctype="multipart/form-data">
        <label for="id">Item ID:</label>
        <input type="text" id="id" name="id" required><br><br>

        <label for="updateTitle">New Title:</label>
        <input type="text" id="updateTitle" name="title"><br><br>
        
        <label for="updatePrice">New Price:</label>
        <input type="text" id="updatePrice" name="price"><br><br>

        <label for="updateSizes">New Sizes (comma separated):</label>
        <input type="text" id="updateSizes" name="sizes"><br><br>

        <label for="updateColors">New Colors (comma separated):</label>
        <input type="text" id="updateColors" name="colors"><br><br>

        <label for="updateImages">New Images:</label>
        <input type="file" id="updateImages" name="images" multiple><br><br>

        <button type="submit">Update Item</button>
    </form>

    <!-- Form to delete an item -->
    <h3>Delete Item</h3>
    <form id="deleteItemForm">
        <label for="deleteId">Item ID:</label>
        <input type="text" id="deleteId" name="id" required><br><br>
        
        <button type="submit">Delete Item</button>
    </form>


    
  <h1>הוספת מודעה חדשה</h1>
  <form action="/add-ad" method="POST">
    <input type="text" name="newAd" placeholder="הקלד מודעה חדשה" required>
    <button type="submit">הוסף</button>
  </form>
<h2>📋 מודעות קיימות:</h2>
<ul>
  <% ads.forEach((ad, index) => { %>
    <li>
      <%= ad %>
      <form action="/delete-ad" method="POST" style="display:inline;">
        <input type="hidden" name="index" value="<%= index %>">
        <button type="submit">🗑️ מחק</button>
      </form>
    </li>
  <% }) %>
</ul>

</body>


</html>
